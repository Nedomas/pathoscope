class PS.Web.InstallBookmarklet extends Ember.View
  templateName: 'install-bookmarklet'
  attributeBindings: ['href']
  href: "<%= Install.bookmark_js %>"
  tagName: 'a'

  click: (event) ->
    event.preventDefault()
  mouseEnter: ->
    @get('controller').send('setHover', true)
  mouseLeave: ->
    @get('controller').send('setHover', false)

