@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,600&subset=latin,cyrillic-ext);
$helvetica: 'Open Sans', sans-serif;
@import url(https://fonts.googleapis.com/css?family=Handlee:400,700);
$logo-font: 'Handlee', sans-serif;

@import "bourbon";
@import "neat";
@import "neat-helpers";

$black: hsla(223, 19%, 19%, 1);
$less-black: hsla(223, 19%, 19%, 0.7);
$white: #FFF;
$red: hsla(0, 77%, 62%, 1);
$dark-red: hsla(0, 77%, 57%, 1);
$grey: #F2F0EB;
$main-color: hsla(0, 62.34%, 69.80%, 1);
$dark-grey: hsla(0, 0%, 70%, 1);
$light-grey: hsla(180, 5.52%, 68.04%, 1);

#lean_overlay {
  position: fixed;
  z-index:100;
  top: 0px;
  left: 0px;
  height:100%;
  width:100%;
  background: #000;
  display: none;
}

#pathoscope-dialog, #pathoscope-login, #pathoscope-success {
  display: none;
}

#pathoscope-dialog {
  font: normal 100% $helvetica !important;
  color: $dark-grey;
  width: 450px;
  height: 400px;
  overflow: scroll;
  padding-bottom: 4em;
  background-color: $white;
  z-index: 999999999 !important;

  header {
    height: 4em;
    background-color: $red;
  }

  .logo {
    float: left;
    display: inline-block;
    background: url('<%= SERVER %>/assets/beseseliu.png') center no-repeat;
    background-size: contain;
    height: 3.5em;
    width: 3.5em;
    margin-left: 1em;
    margin-top: 0.25em;
  }

  .logo-text {
    float: left;
    display: inline-block;
    font: 1.3em $logo-font;
    color: $white;
    padding: 1em 0 0 0.4em;
  }

  .close a {
    float: right;
    font: 0.8em $helvetica;
    color: $white;
    text-transform: uppercase;
    text-decoration: none;
    padding: 1.85em 1.5em 0 0;
  }

  h1 {
    padding: 1em 0;
    font: bold 1.2em $helvetica;
    text-align: center;
    color: $less-black;
  }


}

ul {
  // Normalization
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
  -webkit-margin-start: 0;
  -webkit-margin-***REMOVED***: 0;
  -webkit-padding-start: 0;
}

.paths {
  li {
    list-style-type: none;
    margin: 0 auto 1em;
    line-height: 2em;
    text-align: center;

    a {
      display: block;
      text-transform: uppercase;
      text-decoration: none;
      color: $white;
      padding: 0.7em 1.1em;
      font: 0.8em $helvetica;
      font-weight: 300;
      width: 13em;
      margin: 0 auto;
    }

    a.new {
      color: $less-black;
      font-weight: 400;
    }
  }

}

.links, .tag {
  li {
    list-style-type: none;
    margin: 0 auto 1em;
    line-height: 2em;

    a {
      display: block;
      text-decoration: none;
      font: 0.8em $helvetica;
      font-weight: 300;
    }
  }
}

.tag {
  text-align: center;
  a {
    color: $white;
    padding: 0.7em 1.1em;
    margin: 0 auto;
    width: 13em;
  }
}

h2, h3 {
  text-align: center;
  color: $less-black;
}

h2 {
  font: bold 1.1em $helvetica;
  padding-bottom: 1em;
}

h3 {
  font: bold 0.75em $helvetica;
  text-transform: uppercase;
  color: hsla(222, 18%, 19%, 0.8);
  padding: 0.5em 0 1.75em;
}

.link {
  text-decoration: none;
  text-align: center;
  padding: 1em;

  .title {
    font: bold 0.9em $helvetica;
    color: #272c3a;
    padding-bottom: 0.5em;
  }

  .url {
    font: normal 0.8em $helvetica;
    color: rgba(39, 44, 58, 0.7);
    text-decoration: none;
  }
}

.links {
  li {
    background-color: $white;
    height: 4em;
    @include row();
    padding: 0 1em;
    border-bottom: 1px solid #f2f0eb;
  }

  .thumbnail {
    height: 3.9em;
    width: 3.9em;
    float: left;
  }

  .meta {
    float: left;
    width: 80%;
    padding-left: 1em;
  }

  .title a {
    font: bold 0.9em $helvetica;
    color: #272c3a;
    text-decoration: none;
    text-align: left;
    padding: 0;
    margin: 0;
  }

  .url a {
    font: normal 0.8em $helvetica;
    color: $less-black;
    text-decoration: none;
    text-align: left;
    padding: 0;
    margin: 0;
  }
}

#pathoscope-login {
  input {
    margin: 0 auto;
    display: block;
    height: 40px;
    width: 420px;
    margin: 15px;
  }

  .sign-up {
    text-align: center;
    font-size: 14px;
    padding-top: 10px;
  }
}

