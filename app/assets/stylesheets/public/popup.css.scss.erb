.background-0 {
  background-color: hsla(140, 43%, 47%, 0.7) !important;
  &:hover {
    background-color: hsla(140, 43%, 42%, 0.7) !important;
  }
}

.background-1 {
  background-color: hsla(196, 100%, 37%, 0.7) !important;
  &:hover {
    background-color: hsla(196, 100%, 32%, 0.7) !important;
  }
}

.background-2 {
  background-color: hsla(30, 86%, 53%, 0.7) !important;
  &:hover {
    background-color: hsla(30, 86%, 48%, 0.7) !important;
  }
}

.background-3 {
  background-color: hsla(10, 86%, 53%, 0.7) !important;
  &:hover {
    background-color: hsla(10, 86%, 48%, 0.7) !important;
  }
}

.background-4 {
  background-color: hsla(204, 71%, 77%, 0.7) !important;
  &:hover {
    background-color: hsla(204, 71%, 72%, 0.7) !important;
  }
}

.background-all {
  background-color: $white;
  border: 0.1em solid hsla(223, 19%, 19%, 0.1);
  border-radius: .2em;

  &:hover {
    background-color: hsla(223, 19%, 19%, 0.03);
  }
}
