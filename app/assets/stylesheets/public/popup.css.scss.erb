@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,600&subset=latin,cyrillic-ext);
$helvetica: 'Open Sans', sans-serif;
@import url(https://fonts.googleapis.com/css?family=Handlee:400,700);
$logo-font: 'Handlee', sans-serif;

@import "bourbon";
@import "neat";
@import "neat-helpers";

$black: hsla(223, 19%, 19%, 1);
$less-black: hsla(223, 19%, 19%, 0.7);
$white: #FFF;
$red: hsla(0, 77%, 62%, 1);
$dark-red: hsla(0, 77%, 57%, 1);
$grey: #F2F0EB;
$main-color: hsla(0, 62.34%, 69.80%, 1);
$dark-grey: hsla(0, 0%, 70%, 1);
$light-grey: hsla(180, 5.52%, 68.04%, 1);

#lean_overlay {
  position: fixed;
  z-index:100;
  top: 0px;
  left: 0px;
  height:100%;
  width:100%;
  background: #000;
  display: none;
}

#pathoscope-app, #pathoscope-login, #pathoscope-success {
  display: none;
}

#pathoscope-app {
  font: normal 16px $helvetica !important;
  color: $dark-grey;
  width: 450px;
  height: 400px;
  overflow: scroll;
  padding-bottom: 64px;
  background-color: $white;
  z-index: 999999999 !important;

  header {
    height: 4em;
    background-color: $red;
  }

  .logo {
    float: left;
    display: inline-block;
    background: url('<%= SERVER %>/assets/beseseliu.png') center no-repeat;
    background-size: contain;
    height: 56px;
    width: 56px;
    margin-left: 16px;
    margin-top: 4px;
  }

  .logo-text {
    float: left;
    display: inline-block;
    font: 20px $logo-font;
    color: $white;
    padding: 16px 0 0 6px;
  }

  .close a {
    float: right;
    font: 12px $helvetica;
    color: $white;
    text-transform: uppercase;
    text-decoration: none;
    padding: 29px 24px 0 0;
  }

  h1 {
    padding: 16px 0;
    font: bold 19px $helvetica;
    text-align: center;
    color: $less-black;
  }

  .paths {
    li {
      list-style-type: none;
      margin: 0 auto 16px;
      line-height: 32px;
      text-align: center;

      a {
        display: block;
        text-transform: uppercase;
        text-decoration: none;
        color: $white;
        padding: 11px 17px;
        font: 12px $helvetica;
        font-weight: 300;
        width: 208px;
        margin: 0 auto;
      }

      a.new {
        color: $less-black;
        font-weight: 400;
      }
    }

  }

  .links, .tag {
    li {
      list-style-type: none;
      margin: 0 auto 16px;
      line-height: 32px;

      a {
        display: block;
        text-decoration: none;
        font: 12px $helvetica;
        font-weight: 300;
      }
    }
  }

  .tag {
    text-align: center;
    a {
      color: $white;
      padding: 11px 17px;
      margin: 0 auto;
      width: 208px;
    }
  }

  h2, h3 {
    text-align: center;
    color: $less-black;
  }

  h2 {
    font: bold 17px $helvetica;
    padding-bottom: 16px;
  }

  h3 {
    font: bold 12px $helvetica;
    text-transform: uppercase;
    color: hsla(222, 18%, 19%, 0.8);
    padding: 8px 0 28px;
  }

  .link {
    text-decoration: none;
    text-align: center;
    padding: 16px;

    .title {
      font: bold 14px $helvetica;
      color: #272c3a;
      padding-bottom: 8px;
    }

    .url {
      font: normal 12px $helvetica;
      color: rgba(39, 44, 58, 0.7);
      text-decoration: none;
    }
  }

  .links {
    li {
      background-color: $white;
      height: 64px;
      @include row();
      padding: 0 16px;
      border-bottom: 1px solid #f2f0eb;
    }

    .thumbnail {
      height: 62px;
      width: 62px;
      float: left;
    }

    .meta {
      float: left;
      width: 80%;
      padding-left: 16px;
    }

    .title a {
      font: bold 14px $helvetica;
      color: #272c3a;
      text-decoration: none;
      text-align: left;
      padding: 0;
      margin: 0;
    }

    .url a {
      font: normal 12px $helvetica;
      color: $less-black;
      text-decoration: none;
      text-align: left;
      padding: 0;
      margin: 0;
    }
  }

