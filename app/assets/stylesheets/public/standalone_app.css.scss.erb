@import "settings";
@import "explore";

#lean_overlay {
  position: fixed;
  z-index:100;
  top: 0px;
  left: 0px;
  height:100%;
  width:100%;
  background: #000;
  display: none;
}

#pathoscope-app, #pathoscope-login, #pathoscope-success {
  display: none;
}

#pathoscope-app {
  font: normal 16px $open-sans !important;
  color: $dark-grey;
  width: 650px;
  height: 500px;
  padding-bottom: 32px;
  background-color: $snow-white;
  z-index: 999999999 !important;

  header {
    height: 64px;
    background-color: $semiblack;
  }

  .logo {
    float: left;
    display: inline-block;
    /* background: url('<%= SERVER %>/assets/beseseliu.png') center no-repeat; */
    /* background-size: contain; */
    height: 56px;
    width: 56px;
    margin-left: 16px;
    margin-top: 4px;
  }

  .close a {
    float: right;
    font: 12px $open-sans;
    color: $white;
    text-transform: uppercase;
    text-decoration: none;
    line-height: 64px;
    margin-right: 32px;
  }

  .content {
    overflow-y: scroll;
    height: 400px; // 500 - 64
    padding: 26px 32px;
  }

  h1 {
    font: 400 24px $open-sans;
    color: $semiblack;
    padding-bottom: 16px;
  }

  .choose-path {
    .box {
      @include row();
      display: block;
      background-color: $semiwhite;
      margin: .75em 0;
      border-radius: 16px;
      height: 64px;
    }

    .arrow {
      display: inline-block;
      height: 64px;
      width: 64px;
      vertical-align: top;
      text-align: center;
      line-height: 64px;
    }

    .meta {
      display: inline-block;
      height: 64px;
      vertical-align: top;
      margin: 8px 32px;

      .title {
        font: 600 18px $open-sans;
      }
    }

    .path {
      .arrow a svg {
        display: inline-block;
        height: 2em;
        width: 2em;
        margin-top: 1em;
        /* background: url('unfilled.svg') center no-repeat; */
        /* background-size: contain; */
      }

      .meta {
        font-size: 16px;
        margin: 20px 32px;
      }
    }
  }

  .new-path {
    text-align: center;
    color: $semigrey;

    a {
      text-decoration: none;
      color: $semiblack;
    }
  }
}
