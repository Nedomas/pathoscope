// Change the grid settings
// $visual-grid: true;
/* $column: 90px; */
/* $gutter: 30px; */
$grid-columns: 16;

@import "bourbon";
@import "neat";
@import "neat-helpers";
@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300,700,600&subset=latin,cyrillic-ext);
// @import url(http://fonts.googleapis.com/css?family=Open+Sans:400,700);
$helvetica: 'Open Sans', sans-serif;
@import url(http://fonts.googleapis.com/css?family=Handlee:400,700);
$logo-font: 'Handlee', sans-serif;

$max-width: em(768);
$tablet: new-breakpoint(max-width 768px 8);
$mobile: new-breakpoint(max-width 480px 4);

$black: hsla(223, 19%, 19%, 1);
$less-black: hsla(223, 19%, 19%, 0.7);
$white: #FFF;
$red: #E95353;
$grey: #F2F0EB;
$main-color: hsla(0, 62.34%, 69.80%, 1);
$dark-grey: #B3B3B3;
$light-grey: hsla(180, 5.52%, 68.04%, 1);
$montserrat: 'Montserrat', sans-serif;

body {
  font: normal 100% $helvetica;
  color: $black;
  overflow-x: hidden;
}

.ext***REMOVED***full, .ext***REMOVED***left {
  padding-left: 3000px;
  margin-left: -3000px;
}

.ext***REMOVED***full, .ext***REMOVED***right {
  padding-right: 3000px;
  margin-right: -3000px;
}

#page-wrapper {
  @include outer-container;
}

header {
  background-color: $red;
  padding: 2.5em 0 1em;
  color: $white;

  a {
    color: $white;
    text-decoration: none;
  }

  nav {
    @include row();
    height: 3em;
    ul {
      float: right;
      display: inline-block;
      list-style-type: none;

      li {
        @include inline-block;
        margin-left: golden-ratio(1em, 1);
        margin-top: 0.1em;
        font: 0.8em $helvetica;
        font-weight: 300;
      }

      .nodes {
        background: url('smallwhitetop.png') left no-repeat;
        background-size: contain;
        padding-left: 3.2em;
      }

      .paths {
        background: url('shieldwhitetop.png') left no-repeat;
        background-size: contain;
        padding-left: 2em;
      }

      a {
        text-transform: uppercase;
        &:hover {
          /* border: 1px solid $white; */
          border-bottom: .1em solid $white;
        }
      }
    }

    a.small-logo-text {
      float: left;
      display: inline-block;
      font: 1.3em $logo-font;
    }

    a.small-app {
      float: left;
      display: inline-block;
      margin-top: -2em;
      margin-right: 1em;
      height: 5em;
      width: 5em;
      background: url('beseseliu.png') center no-repeat;
      background-size: contain;
      color: $red;
    }
  }

  .splash {
    .app {
      display: block;
      height: 17em;
      background: url('pathoscopelogo.png') center no-repeat;
      background-size: 25em 25em;
      color: $red;
    }

    .logo-text {
      display: block;
      font: 4em $logo-font;
      text-align: center;
      margin: -0.5em 0 0;
    }

    aside {
      // TODO
      display: none;
    }
  }
}

.errors .notice, .errors .error, .errors .alert {
  margin: 2em auto 1em;
  text-align: center;
  padding: 1em;
  width: 20em;
  border-radius: 0.8em;
}

.notice {
  background: #dff0d8;
  color: #3c763d;
}

.error {
  background: #f2dede;
  color: #a94442;
}

.alert {
  background: #faebcc;
  color: #8a6d3b;
}

input {
  outline: 0;
  border: 1px solid $dark-grey;
  border-radius: 4px;
  padding: 0.5em;
  color: $less-black;

  &:focus {
    border-color: $less-black;
    outline: 0;
  }
}

button {
  margin-left: 1.5em;
  min-width: 6em;
  color: $white;
  text-align: center;
  padding: 0.8em 1em;
  border-radius: 0.4em;
  font: 0.9em $helvetica;
  text-transform: uppercase;
  text-decoration: none;
  border: none;
  outline: none;
  background-color: $less-black;
  color: $white;

  &:hover {
    background-color: $red;
  }
}

main {
  padding-top: 1em;
  nav {
    height: 5em;
  }

  nav.inputbox {
    text-align: center;
    line-height: 5em;

    input {
      height: 2.5em;
      width: 15em;
    }

  }

  nav.breadcrumbs {
    li {
      @include inline-block;
      margin-right: golden-ratio(1em, 1);
      text-align: center;
    }

    a {
      text-transform: uppercase;
      text-decoration: none;
      color: $white;
      padding: 0.7em 1.1em;
      font: 0.8em $helvetica;
      font-weight: 300;
    }

    .breadcrumb-all {
      a {
        font-weight: 400;
        color: $black;
        border-radius: .2em;
        border: 0.1em solid hsla(223, 19%, 19%, 0.1);
        &:hover {
          background-color: hsla(223, 19%, 19%, 0.03);
        }
      }
    }
  }

  article {
    display: block;
  }

  article.explore {
    padding-top: 3em;

    section.current {
      @include row();

      .static {
        @include row();
      }

      .box {
        width: 15em;
        height: 15em;
        float: left;
        border-radius: 1em;
        background-size: contain !important;
      }

      .meta {
        vertical-align: top;
        display: inline-block;
        width: 33em;
        padding-left: 2em;

        a {
          text-decoration: none;
        }

        .title {
          font: bold 1.2em $helvetica;
          a {
            color: $black;
          }
        }

        .description {
          padding-top: 0.5em;
          font: 0.9em $helvetica;
          line-height: 1.5em;
        }

        .url {
          display: block;
          padding-top: 0.3em;
          color: $less-black;
        }
      }


      .comments {
        margin-left: 15em;

        .comments-button {
          display: block;
          background-color: $red;
          width: 14em;
          color: $white;
          text-align: center;
          padding: 0.7em;
          margin: 1em auto;
          border-radius: 0.4em;
          font: 0.8em $helvetica;
          text-transform: uppercase;
          text-decoration: none;
          border: none;
          outline: none;
        }

        li {
          padding: 1em;

          .info {
            @include row();
            padding-bottom: 1em;
          }

          .name {
            float: left;
            font: bold 1em $helvetica;
          }

          .time {
            float: right;
            font: 0.8em $helvetica;
          }

          .text {
            font: 0.9em $helvetica;
            line-height: 1.3em;
          }
        }

        .new-comment {
          margin: 2em;

        ***REMOVED***content {
            width: 75%;
            max-width: 100%;
            height: 3em;
            margin: 0 1em 1em 0;
          }

        ***REMOVED***post {
            padding: 0.5em;
            margin-top: 0.2em;
            width: 15%;
          }
        }

        .login-to-comment {
          margin: 2em;
          text-align: center;
          font: 0.9em $helvetica;

          a {
            color: $black;
          }
        }

      }
    }

    section.deeper {
      .circles {
        display: block;
        height: 4em;
        background: url('topcircle.png') center no-repeat;
        background-size: contain;
      }

      padding-top: 2em;

      .deeper {
        vertical-align: top;
        display: inline-block;
        padding-left: 1.5em;
        padding-top: 2em;

        a {
          font: bold 1.5em $helvetica;
          text-decoration: none;
          color: $black;
        }
      }
    }

 }

  article.paths {
    padding-top: 2em;
  }
}

article {
  li.path, li.link {
    @include row();
    padding-bottom: 4em;
    list-style-type: none;
    height: 5em;
    width: 100%;
    margin: 2em;
    background-color: $grey;
    color: $black;
    border-radius: 2em;
    position: relative;

    .meta {
      display: table;
      float: left;
      height: 5em;
      padding-left: 1em;
    }

    .nodes {
      font: bold 0.8em $helvetica;
      display: inline-block;
      height: 5em;
      line-height: 5em;
      float: right;
      background: url('bottomcircle.png') left no-repeat;
      background-size: 2.5em 2em;
      margin-top: 0.8em;
      padding: 0 2em 0 3em;
    }

    .triangle {
      width: 0;
      height: 0;
      border-top: 2.5em solid $white;
      border-bottom: 2.5em solid $white;

      border-left: 1.25em solid $grey;
      float: right;
    }

    .aligner {
      display: table-cell;
      vertical-align: middle;
    }

    .title {
      font: bold 0.9em $helvetica;
      text-decoration: none;
      color: $black;
    }

    .box {
      width: 5em;
      height: 5em;
      float: left;
      border-radius: 1000em;
    }
  }

  li.path {
    .title {
      font: bold 1.1em $helvetica;
    }

    .box {
      background: url('paths/aerospace.png') center no-repeat;
      background-size: 3em 3em;
    }

  }

  li.link {
    .meta .url a {
      font: normal 0.8em $helvetica;
    }

    .url a {
      color: $less-black;
      text-decoration: none;
    }
  }
}

a.div-link {
  position: absolute;
  margin-left: 10%;
  width: 75%;
  height: 100%;
  top: 0;
  left: 0;
  text-decoration: none; /* No underlines on the link */
  z-index: 10; /* Places the link above everything else in the div */
  background-color: #FFF; /* Fix to make div clickable in IE */
  opacity: 0; /* Fix to make div clickable in IE */
  filter: alpha(opacity=1); /* Fix to make div clickable in IE */
}

footer {
  height: 5em;
}

.user {
  text-align: center;

  h2 {
    text-align: center;
    padding-bottom: 1em;
  }

  div {
    padding: 1em;
  }

  input {
    margin-top: 0.5em;
    padding: 0.5em;
  }

  a {
    color: $black;
  }

}

.cf:before, .cf:after {
  content: " ";
  display: table;
}

.cf:after {
  clear: both;
}

/**
 * For IE 6/7 only
 * Include this rule to trigger hasLayout and contain floats.
 */
.cf {
  *zoom: 1;
}

